<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activity1$PlaceholderFragment"
    android:background="@drawable/bg"
    android:padding="20dp"
    android:accessibilityLiveRegion="assertive">

    <TextView
        android:id="@+id/qtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/qtTitleText"
        android:layout_marginTop="15dp"
        android:textSize="55sp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"
        android:textColor="#b6a6f6b9"
        android:fontFamily="@android:string/untitled"
        android:textStyle="bold|italic"
        android:padding="5sp"
        android:paddingLeft="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:paddingBottom="5sp"
        android:textDirection="locale"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/qtImageButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qtTitle"
        android:minHeight="650dp"
        android:maxHeight="650dp"
        android:src="@drawable/basic"
        android:paddingBottom="5sp"
        android:contentDescription="Choose Photo"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/qtButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qtImageButton"
        android:text="@string/choosePhoto"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:textColor="#b6a6f6b9"
        android:textStyle="bold|italic"
        android:background="@drawable/bgf"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:minHeight="120dp"
        android:focusable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:accessibilityLiveRegion="polite" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/qtEditText"
        android:layout_below="@id/qtButton"
        android:textSize="30sp"
        android:minHeight="120dp"
        android:hint="@string/enter"
        android:gravity="center"
        android:textColor="#b6a6f6b9"
        android:textColorHint="#b6a6f6b9"
        android:autoText="true"
        android:clickable="false"
        android:textStyle="bold|italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="3dp"
        android:accessibilityLiveRegion="polite" />

    <Button
        android:id="@+id/qtButton2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qtEditText"
        android:text="@string/generate"
        android:gravity="center"
        android:textSize="35sp"
        android:minHeight="120dp"
        android:textColor="#b6a6f6b9"
        android:background="@drawable/bgf"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:accessibilityLiveRegion="polite" />

</RelativeLayout>
